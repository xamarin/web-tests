<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Xamarin.AsyncTests.UI;assembly=Xamarin.AsyncTests.UI"
    x:Class="Xamarin.AsyncTests.UI.MainPage">

    <StackLayout Spacing="10" Orientation="Vertical">

        <StackLayout Spacing="20" Orientation="Horizontal">
            <Button Text="Server" Clicked="OnServer" />
            <Button Text="Options" Clicked="OnOptions" />
        </StackLayout>

        <StackLayout Orientation="Vertical" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand"
                     IsVisible="{Binding TestSuiteManager.HasInstance}">

            <local:TestRunnerControl BindingContext="{Binding RootTestRunner}" />

            <ScrollView VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                <local:TestResultView BindingContext="{Binding RootTestResult}" />
            </ScrollView>
        </StackLayout>

    </StackLayout>
</ContentPage>

