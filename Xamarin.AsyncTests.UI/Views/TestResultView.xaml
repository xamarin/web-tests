<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Xamarin.AsyncTests.UI.TestResultView">

    <StackLayout Spacing="10" Orientation="Vertical">

        <Label Text="{Binding Name}" />
        <Label Text="{Binding Status}" TextColor="{Binding Color}" />
        <Label Text="{Binding DetailedStatus}" />

        <ScrollView Orientation="Vertical" VerticalOptions="FillAndExpand" IsVisible="{Binding HasMessage}">
            <Label Text="{Binding Message}" Font="10" VerticalOptions="CenterAndExpand" />
        </ScrollView>

        <ListView x:Name="List" IsEnabled="false" IsVisible="false" RowHeight="25">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <ViewCell.View>
                            <StackLayout Orientation="Horizontal">

                                <Label Text="{Binding Name}" TextColor="{Binding Color}"
                                       HorizontalOptions="FillAndExpand" />

                            </StackLayout>
                        </ViewCell.View>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </StackLayout>
</ContentPage>

