<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage Title="Results"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Xamarin.AsyncTests.UI;assembly=Xamarin.AsyncTests.UI"
    x:Class="Xamarin.AsyncTests.UI.TestResultPage">

    <ContentView.Resources>
    	<ResourceDictionary>
            <local:TestResultConverter x:Key="converter" />
    	</ResourceDictionary>
    </ContentView.Resources>

    <StackLayout Spacing="10" Orientation="Vertical">

        <Frame>
            <StackLayout Orientation="Vertical">
                <local:TestRunnerControl BindingContext="{Binding App.TestRunner}" />
                <Label Text="{Binding Result.Status, Converter={StaticResource converter}}"
                       TextColor="{Binding StatusColor, Converter={StaticResource converter}}" />
            </StackLayout>
        </Frame>

        <ScrollView VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
            <local:TestResultView />
        </ScrollView>

    </StackLayout>

</ContentPage>

